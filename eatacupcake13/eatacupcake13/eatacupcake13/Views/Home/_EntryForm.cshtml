@model eatacupcake13.Models.Entry

@using (Html.BeginForm())
{
    <div class="create-view">
        <div class="col-lg-6 offset-md-3 pt-3 bg-info text-light">
            <div class="form-horizontal">
                <h4 class="text-md-center">Entry</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "bg-danger" })
                <div class="form-group row">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-5 text-md-right" })
                    <div class="col-md-7 ">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "bg-danger" })
                    </div>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "bg-danger" })
                <div class="form-group row">
                    @Html.LabelFor(model => model.DateAdded, htmlAttributes: new { @class = "control-label col-md-5 text-md-right" })
                    <div class="col-md-7 ">
                        @Html.EditorFor(model => model.DateAdded, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DateAdded, "", new { @class = "bg-danger" })
                    </div>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "bg-danger" })
                <div class="form-group row">
                    @Html.LabelFor(model => model.SeasonType, htmlAttributes: new { @class = "control-label col-md-5 text-md-right" })
                    <div class="col-md-7 ">
                        @Html.EditorFor(model => model.SeasonType, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SeasonType, "", new { @class = "bg-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Seasonal, htmlAttributes: new { @class = "control-label col-md-5 text-md-right" })
                    <div class="col-md-7">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Seasonal)
                            @Html.ValidationMessageFor(model => model.Seasonal, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "bg-danger" })
                <div class="form-group row">
                    @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-md-5 text-md-right" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "bg-danger" })
                    </div>
                </div>

                <div class="form-group col">
                    <div class="col-md-4 offset-md-4 text-md-center pb-1"><input type="submit" value="Save" class="btn btn-primary" /></div>
                    <div class="col-md-4 offset-md-4 text-md-center pt-1 pb-4">
                        <button class="btn btn-secondary" onclick="location.href='@Url.Action("Index")';return false;">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

