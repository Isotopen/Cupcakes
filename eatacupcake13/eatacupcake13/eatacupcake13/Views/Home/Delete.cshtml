@model eatacupcake13.Models.Entry

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center ">Delete cupcake from menu</h2>

<div class="alert alert-danger text-center">
    Are you sure you want to delete the following entry?
</div>

<div class="create-view">
    <div class="row">
        <div class="col-lg-6 offset-5 pt-4">
            <div class="row">
                <div class="col-xs-4 col-sm-3">@Html.DisplayNameFor(model => model.Name)</div>
                <div class="col-xs-8 col-sm-9 text-danger">@Html.DisplayFor(model => model.Name)</div>
            </div>
            <div class="row">
                <div class="col-xs-4 col-sm-3">@Html.DisplayNameFor(model => model.DateAdded)</div>
                <div class="col-xs-8 col-sm-9 text-danger">@Html.DisplayFor(model => model.DateAdded)</div>
            </div>
            <div class="row">
                <div class="col-xs-4 col-sm-3">@Html.DisplayNameFor(model => model.SeasonType)</div>
                <div class="col-xs-8 col-sm-9 text-danger">@Html.DisplayFor(model => model.SeasonType)</div>
            </div>
            <div class="row">
                <div class="col-xs-4 col-sm-3">@Html.DisplayNameFor(model => model.Notes)</div>
                <div class="col-xs-8 col-sm-9 text-danger">@Html.DisplayFor(model => model.Notes)</div>
            </div>
            <div class="row">
                <div class="col-xs-4 col-sm-3"> @Html.DisplayNameFor(model => model.Seasonal)</div>
                <div class="col-xs-8 col-sm-9 text-danger">@Html.DisplayFor(model => model.Seasonal)</div>
            </div>

            @using (Html.BeginForm())
            {
                <div class="form-actions no-color pt-4 ml-lg-5">
                    <input type="submit" value="Delete" class="btn btn-danger btn-lg margin-right" /> |
                    <a href="@Url.Action("Index")" class="btn btn-warning btn-lg"><span class="glyphicon glyphicon-remove"></span>Cancel</a>
                </div>
            }
        </div>
    </div>
</div>
